@page
@model CreateModel
@{
}

<h2>Create Book</h2>
<br />
<div class="container">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="row">
            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                        <label asp-for="Book.Name"></label>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" asp-for="Book.Name" />
                    </div>
                    <span asp-validation-for="Book.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                        <label asp-for="Book.ISBN"></label>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" asp-for="Book.ISBN" />
                    </div>
                    <span asp-validation-for="Book.ISBN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-1">
                        <label asp-for="Book.Author"></label>
                    </div>
                    <div class="col-md-4">
                        <input class="form-control" asp-for="Book.Author" />
                    </div>
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-sm">Create</button>
                <a asp-page="Index" class="btn btn-success btn-sm">Back to list</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}